                </TextBox>
                <Button HorizontalAlignment="Left"  Width=" 130" FontSize =" 25" Name="btn" Click="btn_Click" Foreground="Black"   Background="CadetBlue"      >Search</Button>

            </StackPanel>
            <Menu Width=" 200" HorizontalAlignment="Left"  x:Name="menu">

                <MenuItem  HorizontalAlignment="Left"     Width=" 200"  Height=" 30"  x:Name="n1">
                    <MenuItem Name="n2">
                        <MenuItem Name="n3">
                            <MenuItem Name="n4">
                            </MenuItem>
                        </MenuItem>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
